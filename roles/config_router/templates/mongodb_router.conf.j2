# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongos.log

# Security configuration
security:
  keyFile: /var/lib/mongo/mongo_security.key
  transitionToAuth: true

# network interfaces
net:
  port: 27017
  bindIp: 0.0.0.0

# ConfigDB
sharding:
  configDB: {{ replicaset_name }}/{{ members }}
